{
  "name": "react-popopo",
  "version": "2.1.5",
  "description": "Smart popover component for React. Closes when you click away, no need to reclick the trigger button to close it",
  "main": "dist/index.js",
  "files": [
    "src",
    "dist",
    "README"
  ],
  "scripts": {
    "build": "babel src --out-dir dist --copy-files",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": "tape -r babel-core/register tests/spec.js",
    "prepublish": "npm run build",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "deploy-storybook": "storybook-to-ghpages",
    "size": "npm run build && size-limit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dapi/react-popopo.git"
  },
  "author": "Dan Caragea <dancaragea@gmail.com>",
  "contributors": [
    "name": "Danil Pismenny",
    "email": "danil@brandymint.ru",
    "url": "https://github.com/dapi"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-transform-async-to-generator": "^7.5.0",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/plugin-transform-template-literals": "^7.4.4",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^5.1.9",
    "@storybook/addon-links": "^5.1.9",
    "@storybook/addons": "^5.1.9",
    "@storybook/react": "^5.1.9",
    "@storybook/storybook-deployer": "^2.8.1",
    "babel-loader": "^8.0.6",
    "semantic-release": "^15.13.18",
    "size-limit": "^1.3.7"
  },
  "keywords": [
    "react",
    "react-component",
    "popover",
    "popopo"
  ],
  "peerDependencies": {
    "classnames": "^2.2.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "size-limit": [
    {
      "path": "dist/*.js",
      "limit": "500 ms"
    }
  ],
  "dependencies": {
    "styled-components": "^4.3.2"
  }
}
